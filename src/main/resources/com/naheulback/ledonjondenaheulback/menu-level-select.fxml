<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.naheulback.ledonjondenaheulback.controllers.LevelSelectController">
   <children>
      <Label fx:id="titleLabel" alignment="CENTER" layoutX="50.0" layoutY="69.0" prefHeight="100.0" prefWidth="900.0" text="Choix du niveau" textAlignment="CENTER" />
      <VBox layoutY="200.0" prefHeight="500.0" prefWidth="1000.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="69.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="170.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@menuImages/niveau1.png" />
                     </image></ImageView>
                  <ImageView fitHeight="150.0" fitWidth="170.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@menuImages/niveau2.png" />
                     </image></ImageView>
                  <ImageView fitHeight="150.0" fitWidth="170.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@menuImages/niveau3.png" />
                     </image></ImageView>
                  <ImageView fitHeight="150.0" fitWidth="170.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@menuImages/niveau4.png" />
                     </image></ImageView>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="150.0" prefWidth="1000.0" spacing="69.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#level1ButtonClicked" prefHeight="100.0" prefWidth="170.0" text="Level 1" />
                  <Button mnemonicParsing="false" onAction="#level2ButtonClicked" prefHeight="100.0" prefWidth="170.0" text="Level 2" />
                  <Button mnemonicParsing="false" onAction="#level3ButtonClicked" prefHeight="100.0" prefWidth="170.0" text="Level 3" />
                  <Button mnemonicParsing="false" onAction="#level4ButtonClicked" prefHeight="100.0" prefWidth="170.0" text="Level 4" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="150.0" prefWidth="1000.0" spacing="69.0">
               <children>
                  <Label fx:id="level1Lbl" alignment="TOP_CENTER" prefHeight="150.0" prefWidth="170.0" text="Label" textAlignment="CENTER"/>
                  <Label fx:id="level2Lbl" alignment="TOP_CENTER" prefHeight="150.0" prefWidth="170.0" text="Label" textAlignment="CENTER" />
                  <Label fx:id="level3Lbl" alignment="TOP_CENTER" prefHeight="150.0" prefWidth="170.0" text="Label" textAlignment="CENTER" />
                  <Label fx:id="level4Lbl" alignment="TOP_CENTER" prefHeight="150.0" prefWidth="170.0" text="Label" textAlignment="CENTER" />
               </children></HBox>
         </children>
      </VBox>
   </children>
